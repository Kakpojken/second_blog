<div id="container">
	
<span id="link_back"> 
	<%= link_to image_tag('logout_no.png', :alt => "Go back") , posts_path %> 
</span>

<div id="inserter">

	<h1>Edit post</h1>

	<% form_for(@post) do |f| %>
	<%= f.error_messages %>

	<p>
		<%= f.label :topic %><br />
		<%= f.text_field :topic %>
	</p>
	<p>
		<%= f.label :post %><br />
		<%= f.text_area :post %>
	</p>
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.submit 'Update' %>
	</p>
	<% end %>

</div>

</div>